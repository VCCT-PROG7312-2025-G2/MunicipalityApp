@model List<MunicipalityApp.Models.EventItem>
@using System.Linq

@{
    ViewData["Title"] = "Local Events & Announcements";
    var cats = (IReadOnlyCollection<string>)(ViewBag.Categories ?? Array.Empty<string>());
    var rec = (IReadOnlyList<string>)(ViewBag.Recommendations ?? Array.Empty<string>());
    var soon = (IEnumerable<MunicipalityApp.Models.EventItem>)(ViewBag.Soonest ?? Enumerable.Empty<MunicipalityApp.Models.EventItem>());
    var rv = (IReadOnlyList<MunicipalityApp.Models.EventItem>)(ViewBag.RecentlyViewed ?? Array.Empty<MunicipalityApp.Models.EventItem>());
    var recEvents = (IEnumerable<MunicipalityApp.Models.EventItem>)(ViewBag.RecommendedEvents ?? Enumerable.Empty<MunicipalityApp.Models.EventItem>());

    int page = (int)(ViewBag.Page ?? 1), pages = (int)(ViewBag.Pages ?? 1), size = (int)(ViewBag.Size ?? 10);
    string cat = (string)(ViewBag.Category ?? ""), dateVal = (string)(ViewBag.Date ?? "");

    bool isFirst = page <= 1;
    bool isLast = page >= pages;
}

<section class="mt-3">
    <h1 class="mb-2">Local Events &amp; Announcements</h1>

    <form method="get" class="row g-2 mb-3">
        <div class="col-sm-5">
            <label class="form-label">Category</label>
            <select name="category" class="form-select">
                <option value="">All categories</option>
                @foreach (var c in cats)
                {
                    if (string.Equals(c, cat, StringComparison.OrdinalIgnoreCase))
                    {
                        <option value="@c" selected="selected">@c</option>
                    }
                    else
                    {
                        <option value="@c">@c</option>
                    }
                }
            </select>
        </div>
        <div class="col-sm-4">
            <label class="form-label">Date</label>
            <input type="date" name="date" class="form-control" value="@dateVal" />
        </div>
        <div class="col-sm-3">
            <label class="form-label d-block">&nbsp;</label>
            <button class="btn btn-primary w-100" type="submit">Search</button>
        </div>
    </form>

    @if (rec.Count > 0)
    {
        <div class="alert alert-info" role="status" aria-live="polite">
            <strong>Recommended categories:</strong> @string.Join(", ", rec)
        </div>
    }

    @* NEW: Recommended concrete events *@
    @if (recEvents.Any())
    {
        <div class="card mt-2 mb-3">
            <div class="card-body">
                <h5 class="card-title mb-2">Recommended for you</h5>
                <ul class="list-unstyled mb-0">
                    @foreach (var e in recEvents)
                    {
                        <li class="mb-2">
                            <a asp-action="Details" asp-route-id="@e.Id"><strong>@e.Title</strong></a>
                            <div class="text-muted small">@e.Date.ToString("dd MMM") @e.Time • @e.Category • @e.Venue</div>
                        </li>
                    }
                </ul>
            </div>
        </div>
    }

    <div class="row">
        <div class="col-lg-8">
            @if (Model.Count == 0)
            {
                <p class="text-muted">No events found for your filters.</p>
            }
            else
            {
                <div class="text-muted mb-2">
                    Showing <strong>@Model.Count</strong> of <strong>@(ViewBag.Total ?? 0)</strong>
                </div>

                <ul class="list-group">
                    @foreach (var e in Model)
                    {
                        <li class="list-group-item">
                            <div class="d-flex justify-content-between align-items-start">
                                <div>
                                    <strong>@e.Title</strong> — @e.Category<br />
                                    <small>@e.Date.ToString("yyyy-MM-dd") @e.Time.ToString("HH:mm") — @e.Venue</small>
                                    @if (!string.IsNullOrWhiteSpace(e.Description))
                                    {
                                        <div class="text-muted small">@e.Description</div>
                                    }
                                </div>
                                <div>
                                    <a class="btn btn-sm btn-outline-primary" asp-action="Details" asp-route-id="@e.Id">Details</a>
                                </div>
                            </div>
                        </li>
                    }
                </ul>

                @if (pages > 1)
                {
                    <nav class="mt-3" aria-label="Events pages">
                        <ul class="pagination">
                            @if (isFirst)
                            {
                                <li class="page-item disabled" aria-disabled="true">
                                    <span class="page-link" tabindex="-1">Previous</span>
                                </li>
                            }
                            else
                            {
                                <li class="page-item">
                                    <a class="page-link"
                                       href="@Url.Action("Index", "Events", new { category = cat, date = dateVal, page = page - 1, size = size })">
                                        Previous
                                    </a>
                                </li>
                            }

                            <li class="page-item disabled">
                                <span class="page-link">Page @(page) of @(pages)</span>
                            </li>

                            @if (isLast)
                            {
                                <li class="page-item disabled" aria-disabled="true">
                                    <span class="page-link" tabindex="-1">Next</span>
                                </li>
                            }
                            else
                            {
                                <li class="page-item">
                                    <a class="page-link"
                                       href="@Url.Action("Index", "Events", new { category = cat, date = dateVal, page = page + 1, size = size })">
                                        Next
                                    </a>
                                </li>
                            }
                        </ul>
                    </nav>
                }
            }
        </div>

        <div class="col-lg-4 mt-3 mt-lg-0">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title mb-2">Coming up</h5>
                    <ul class="list-unstyled mb-0">
                        @foreach (var e in soon)
                        {
                            <li class="mb-2">
                                <strong>@e.Date.ToString("dd MMM")</strong> — @e.Title
                                <div class="text-muted small">@e.Time.ToString("HH:mm") • @e.Venue</div>
                            </li>
                        }
                    </ul>
                </div>
            </div>

            <div class="card mt-3">
                <div class="card-body">
                    <h5 class="card-title mb-2">Recently viewed</h5>
                    @if (rv.Count == 0)
                    {
                        <div class="text-muted small">No items yet.</div>
                    }
                    else
                    {
                        <ul class="list-unstyled mb-0">
                            @foreach (var e in rv)
                            {
                                <li class="mb-2">
                                    <a asp-action="Details" asp-route-id="@e.Id"><strong>@e.Title</strong></a>
                                    <div class="text-muted small">@e.Date.ToString("dd MMM") • @e.Category</div>
                                </li>
                            }
                        </ul>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
