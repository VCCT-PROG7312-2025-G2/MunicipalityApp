@model MunicipalityApp.Data.BasicTreeNode<string, MunicipalityApp.Models.IssueReport>
@{
    ViewData["Title"] = "Requests Hierarchy";
}

<section class="mt-3">
    <h1 class="mb-2">Requests Hierarchy</h1>
    <p class="text-muted">
        Basic Tree demo: <strong>Requests</strong> → <strong>Status</strong> → <strong>Category</strong> → <strong>Issues</strong>.
        Each category node contains the issues as values.
    </p>

    <div class="card">
        <div class="card-body">
            <ul class="tree list-unstyled mb-0">
                @* Render children of the root (Status nodes) *@
                @foreach (var statusNode in Model.Children)
                {
                    @await Html.PartialAsync("_HierarchyNode", statusNode)
                }
            </ul>
        </div>
    </div>

    <div class="mt-3 d-flex gap-2">
        <a class="btn btn-outline-secondary" asp-controller="Requests" asp-action="Index">Back to Status</a>
        <a class="btn btn-primary" asp-controller="Home" asp-action="Index">Main Menu</a>
    </div>
</section>

<style>
    /* Simple tree styling */
    .tree > li {
        margin-bottom: .75rem;
    }

    .tree li > .node-key {
        font-weight: 600;
    }

    .tree ul {
        margin-left: 1rem;
        border-left: 2px solid #e5e7eb;
        padding-left: .75rem;
    }

    .issue-line {
        line-height: 1.3;
    }

    .issue-meta {
        color: #6b7280;
        font-size: .875rem;
    }

    .badge-count {
        margin-left: .25rem;
    }

    .node-row {
        display: flex;
        align-items: center;
        gap: .5rem;
    }
</style>
