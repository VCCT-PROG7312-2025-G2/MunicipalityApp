@model List<MunicipalityApp.Models.IssueReport>
@using Microsoft.AspNetCore.Mvc.Rendering
@using System.Collections.Generic
@using System.Linq
@using MunicipalityApp.Models

@{
    ViewData["Title"] = "Service Request Status";

    var statuses = (IEnumerable<string>)(ViewBag.Statuses ?? Array.Empty<string>());
    var cats = (IEnumerable<string>)(ViewBag.Categories ?? Array.Empty<string>());

    string q = (string)(ViewBag.Query ?? "");
    string status = (string)(ViewBag.Status ?? "");
    string category = (string)(ViewBag.Category ?? "");
    string from = (string)(ViewBag.From ?? "");
    string to = (string)(ViewBag.To ?? "");
    string locFrom = (string)(ViewBag.LocFrom ?? "");   // NEW
    string locTo   = (string)(ViewBag.LocTo ?? "");     // NEW
    string sort = (string)(ViewBag.Sort ?? "recent");

    int curPage = (int)(ViewBag.Page ?? 1);
    int totalPages = (int)(ViewBag.Pages ?? 1);
    int size = (int)(ViewBag.Size ?? 10);
    int total = (int)(ViewBag.Total ?? 0);

    bool isFirst = curPage <= 1;
    bool isLast  = curPage >= totalPages;

    // Avoid tuple-generic cast (Razor can be picky). Use dynamic-safe fallbacks.
    var urgent = ViewBag.TopUrgent as IReadOnlyList<IssueReport> ?? new List<IssueReport>();
    var path   = ViewBag.WorkflowToResolved as IReadOnlyList<IssueStatus> ?? new List<IssueStatus>();
    var mst    = ViewBag.DepartmentMst as IEnumerable<dynamic> ?? Enumerable.Empty<dynamic>();
}

<section class="mt-3">
    <h1 class="mb-2">Service Request Status</h1>
    <p class="text-muted">
        Track progress of submitted issues. Use filters to refine your view.
        <br />
        <small class="text-muted">Tip: Leave <em>From</em>/<em>To</em> blank and use <em>Loc From/To</em> to demonstrate the BST (alphabetic range by location).</small>
    </p>

    <form method="get" class="mb-3">
        <div class="row g-2">
            <div class="col-md-3">
                <label class="form-label">Search</label>
                <input type="text" name="q" class="form-control" value="@q" placeholder="Location or description..." />
            </div>
            <div class="col-md-2">
                <label class="form-label">Status</label>
                @Html.DropDownList(
                    "status",
                    new SelectList(statuses, status),
                    "All statuses",
                    new { @class = "form-select" }
                )
            </div>
            <div class="col-md-2">
                <label class="form-label">Category</label>
                @Html.DropDownList(
                    "category",
                    new SelectList(cats, category),
                    "All categories",
                    new { @class = "form-select" }
                )
            </div>
            <div class="col-md-1 d-flex align-items-end">
                <button class="btn btn-primary w-100" type="submit">Filter</button>
            </div>
        </div>

        <div class="row g-2 mt-1">
            <div class="col-md-2">
                <label class="form-label">From</label>
                <input type="date" name="from" value="@from" class="form-control" />
            </div>
            <div class="col-md-2">
                <label class="form-label">To</label>
                <input type="date" name="to" value="@to" class="form-control" />
            </div>
            <div class="col-md-2">
                <label class="form-label">Loc From</label>
                <input type="text" name="locFrom" value="@locFrom" class="form-control" placeholder="a" />
            </div>
            <div class="col-md-2">
                <label class="form-label">Loc To</label>
                <input type="text" name="locTo" value="@locTo" class="form-control" placeholder="m" />
            </div>
        </div>
    </form>

    <div class="d-flex justify-content-between align-items-center mb-2">
        <div class="text-muted">
            Showing <strong>@Model.Count</strong> of <strong>@total</strong>
        </div>
        <div>
            <div class="btn-group" role="group" aria-label="Sort">
                <a class="btn btn-sm @(sort=="recent" ? "btn-primary" : "btn-outline-primary")"
                   href="@Url.Action("Index","Requests", new { q, status, category, from, to, locFrom, locTo, sort="recent", page=1, size })">Most recent</a>
                <a class="btn btn-sm @(sort=="oldest" ? "btn-primary" : "btn-outline-primary")"
                   href="@Url.Action("Index","Requests", new { q, status, category, from, to, locFrom, locTo, sort="oldest", page=1, size })">Oldest</a>
                <a class="btn btn-sm @(sort=="status" ? "btn-primary" : "btn-outline-primary")"
                   href="@Url.Action("Index","Requests", new { q, status, category, from, to, locFrom, locTo, sort="status", page=1, size })">By status</a>
                <a class="btn btn-sm @(sort=="category" ? "btn-primary" : "btn-outline-primary")"
                   href="@Url.Action("Index","Requests", new { q, status, category, from, to, locFrom, locTo, sort="category", page=1, size })">By category</a>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Left: table -->
        <div class="col-lg-8">
            @if (Model.Count == 0)
            {
                <p class="text-muted">No requests found for your filters.</p>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-sm align-middle">
                        <thead>
                            <tr>
                                <th>Reference</th>
                                <th>Submitted</th>
                                <th>Status</th>
                                <th>Category</th>
                                <th>Location</th>
                                <th>Description</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                        @foreach (var it in Model)
                        {
                            <tr>
                                <td class="font-monospace">@it.Id</td> @* Bootstrap 5 monospace class *@
                                <td>@it.CreatedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</td>
                                <td>
                                    <span class="badge @(it.Status switch {
                                        MunicipalityApp.Models.IssueStatus.Submitted => "bg-secondary",
                                        MunicipalityApp.Models.IssueStatus.Assigned => "bg-info text-dark",
                                        MunicipalityApp.Models.IssueStatus.InProgress => "bg-warning text-dark",
                                        MunicipalityApp.Models.IssueStatus.Resolved => "bg-success",
                                        _ => "bg-secondary"
                                    })">@it.Status</span>
                                </td>
                                <td>@it.Category</td>
                                <td>@it.Location</td>
                                <td class="text-truncate" style="max-width:320px" title="@it.Description">@it.Description</td>
                                <td class="text-end">
                                    <a class="btn btn-sm btn-outline-primary" asp-action="Details" asp-route-id="@it.Id">View</a>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>

                @if (totalPages > 1)
                {
                    <nav class="mt-2" aria-label="Requests pages">
                        <ul class="pagination">
                            <li class="page-item @(isFirst ? "disabled" : "")">
                                <a class="page-link"
                                   href='@Url.Action("Index","Requests", new { q, status, category, from, to, locFrom, locTo, sort, page = curPage - 1, size })'>Previous</a>
                            </li>
                            <li class="page-item disabled">
                                <span class="page-link">Page @(curPage) of @(totalPages)</span>
                            </li>
                            <li class="page-item @(isLast ? "disabled" : "")">
                                <a class="page-link"
                                   href='@Url.Action("Index","Requests", new { q, status, category, from, to, locFrom, locTo, sort, page = curPage + 1, size })'>Next</a>
                            </li>
                        </ul>
                    </nav>
                }
            }
        </div>

        <!-- Right: analytics panels -->
        <div class="col-lg-4 mt-3 mt-lg-0">
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title mb-2">Most Urgent</h5>
                    @if (!urgent.Any())
                    {
                        <div class="text-muted small">No items yet.</div>
                    }
                    else
                    {
                        <ul class="list-unstyled mb-0">
                            @foreach (var it in urgent)
                            {
                                <li class="mb-2">
                                    <a asp-action="Details" asp-route-id="@it.Id" class="text-decoration-none">
                                        <strong>@it.Category</strong> — @it.Location
                                    </a>
                                    <div class="small text-muted">@it.CreatedAt.ToLocalTime():g • @it.Status</div>
                                </li>
                            }
                        </ul>
                    }
                </div>
            </div>

            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title mb-2">Workflow to Resolved</h5>
                    @if (!path.Any())
                    {
                        <div class="text-muted small">No path available.</div>
                    }
                    else
                    {
                        <div class="small">
                            @for (int i = 0; i < path.Count; i++)
                            {
                                <span class="badge bg-light text-dark">@path[i]</span>
                                @if (i < path.Count - 1)
                                {
                                    @: →
                                }
                            }
                        </div>
                    }
                </div>
            </div>

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title mb-2">Dept Connectivity (MST)</h5>
                    @if (!mst.Any())
                    {
                        <div class="text-muted small">Insufficient data.</div>
                    }
                    else
                    {
                        <ul class="list-unstyled mb-0 small">
                            @foreach (var e in mst)
                            {
                                <li>@e.A — @e.B <span class="text-muted">(w=@e.W)</span></li>
                            }
                        </ul>
                        <div class="text-muted mt-1 small">Minimum edges linking all categories (illustrative).</div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
